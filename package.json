{
  "name": "poky",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.3.13",
      "dotenv": "^17.2.2",
      "zod": "^4.1.11",
      "typescript": "^5.8.2",
      "tsdown": "^0.15.5",
      "drizzle-orm": "^0.44.6"
    }
  },
  "scripts": {
    "check": "oxlint --fix",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "compile:server": "turbo -F backend compile",
    "db:push": "turbo -F @poky/db db:push",
    "db:studio": "turbo -F @poky/db db:studio",
    "db:generate": "turbo -F @poky/db db:generate",
    "db:migrate": "turbo -F @poky/db db:migrate"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "oxlint": "^1.24.0",
    "tsdown": "^0.15.10",
    "@types/bun": "^1.3.1"
  },
  "packageManager": "bun@1.3.1"
}
